<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Wellcome.TransitionActivity">

    <TextView
        android:id="@+id/wellcomTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="cursive"
        android:textSize="@dimen/_33ssp"
        android:textColor="@color/PopPink"
        android:text="@string/WellcomShop"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exploreTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/dancing_script_bold"
        android:textSize="@dimen/_25ssp"
        android:text="@string/explore_us"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wellcomTxt" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_150sdp"
        android:elevation="@dimen/_20sdp"
        app:cardElevation="@dimen/_20sdp"
        android:outlineSpotShadowColor="@color/PopRedPink"
        android:layout_margin="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exploreTxt">

        <ImageView
            android:id="@+id/transition_image"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_270sdp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>


