<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivities.Authentication.SignInActivity">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_120sdp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:shadowColor="@color/white"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="30"
        android:text="*CoCoon"
        android:textColor="@color/white"
        android:textSize="@dimen/_60ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/componentslinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appname">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:hint="@string/email"
            app:hintTextColor="@color/PopRedPink"
            android:textColorHint="@color/PopPink"
            app:endIconMode="clear_text"
            android:textColor="@color/PopPink"
            android:textStyle="bold"
            app:endIconTint="@color/PopPink">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SiginIn_et_Email"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_40sdp"
                android:textColor="@color/PopPink"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="@dimen/_10sdp"
                android:ems="10"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColorHint="@color/PopPink"
                android:drawableTint="@color/white"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_20sdp"  />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            app:hintTextColor="@color/PopRedPink"
            android:textColorHint="@color/PopPink"
            app:endIconMode="password_toggle"
            android:textColor="@color/PopPink"
            android:textStyle="bold"
            app:endIconTint="@color/PopPink">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SiginIn_et_Password"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                 android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/white"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_20sdp"
                android:textColor="@color/PopPink"
                android:textColorHint="@color/PopPink"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SiginIn_et_Email"
                app:layout_constraintVertical_bias="0.086" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SiginIn_btn_Signin"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/button_backround_colored"
            android:fontFamily="@font/dancing_script_bold"
            android:text="@string/signin"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_18ssp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dancing_script_bold"
                android:text="@string/RegisterHint"
                android:textSize="@dimen/_18ssp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/SiginIn_btn_Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:fontFamily="@font/dancing_script_bold"
                android:text="@string/register"
                android:textColor="@color/PopPink"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>









